<h1><a href = "/home.html"> PC Buildr Beta</a></h1>
<!--
<% $price = params[:price].to_i%>
<% $processor = ($price * params[:processor].to_f)/100 %>
<% $graphics = ($price * params[:graphics].to_f)/100 %>
<% $storage = ($price * params[:storage].to_f)/100 %>
<% $size = params[:case] %>
