</script>
<script>
    $(document).ready(function(){
        $("#show").click(function(){
            $("p").show();
        });
    });
</script>
<script>
    $(document).ready(function(){
        $('.slider').slider().on({
            
            // change: function() {
            //   alert('change triggered');
            // },
            slidechange: function() {
                var id = this.id;
                if(id=='slider3') {
                    $(' .desc3').show();
                    $(' .desc2').hide();
                    $(' .desc1').hide();
                }
                if(id=='slider2') {
                    $(' .desc2').show();
                    $(' .desc3').hide();
                    $(' .desc1').hide();
                }
                if(id=='slider1') {
                    $(' .desc1').show();
                    $(' .desc2').hide();
                    $(' .desc3').hide();
                }
            }
        });
    });
</script>