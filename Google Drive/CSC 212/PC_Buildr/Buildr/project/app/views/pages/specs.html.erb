<script>
    $(document).ready(function(){
       $( "#sidebar" ).slider({
        	min: 1,
        	max:6,
        	step:.5,
        	orientation: "vertical",
        	change: function( event, ui ) {
        	    $("#info").text('Slider = ' + ui.value);
        	}
        });
    });
</script>
<script>
    $(document).ready(function(){
       $( ".slider" ).slider({
        	min: 1,
